{
    "navigationFallback": {
        "rewrite": "/index.html"
    },
    "auth": {
        "identityProviders": {
            "customOpenIdConnectProviders": {
                "aadb2c": {
                    "registration": {
                        "clientIdSettingName": "AADB2C_PROVIDER_CLIENT_ID",
                        "clientCredential": {
                            "clientSecretSettingName": "AADB2C_PROVIDER_CLIENT_SECRET"
                        },
                        "openIdConnectConfiguration": {
                            "wellKnownOpenIdConfiguration": "https://sampleB2Corg.b2clogin.com/sampleB2Corg.onmicrosoft.com/B2C_1_susi/v2.0/.well-known/openid-configuration"
                        }
                    },
                    "login": {
                        "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier",
                        "scopes": [
                            "openid",
                            "profile"
                        ],
                        "loginParameterNames": []
                    }
                }
            }
        }
    },
    "trailingSlash": "auto",
    "routes": [
        {
            "route": "/api/*",
            "methods": [
                "GET"
            ],
            "allowedRoles": [
                "authenticated"
            ]
        }
    ],
    "responseOverrides": {
        "401": {
          "statusCode": 302,
          "redirect": "/.auth/login/aadb2c"
        }
      }

}